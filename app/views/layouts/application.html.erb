<!DOCTYPE html>
<html>
  <head>
    <title>Benchbnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <%= javascript_pack_tag 'bundle' %>

    <% if logged_in? %>
      <script id="bootstrap-current-user" type="text/javascript">
          window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>

    <script type="text/javascript">
      window.pants = "<%= image_url('pants.jpeg') %>"
      window.dresses = "<%= image_url('dresses.jpeg') %>"
      window.tops = "<%= image_url('tops.jpeg') %>"
      window.jackets = "<%= image_url('jackets.jpeg') %>"
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
